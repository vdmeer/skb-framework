#!/usr/bin/env bash
##
## Pre script for site skb-framework
##
## @author     Sven van der Meer <vdmeer.sven@mykolab.com>
## @version    v0.0.0
##

function MvnSitePostScript(){
    ## create exit option list
    if [[ -f src/site/asciidoc/elements/option-exit-list.adoc ]]; then
        rm src/site/asciidoc/elements/option-exit-list.adoc
    fi
    printf "== List of exit options\n" > src/site/asciidoc/elements/option-exit-list.adoc
    ${DMAP_TASK_EXEC["describe-option"]} --exit --print-mode adoc >> src/site/asciidoc/elements/option-exit-list.adoc


    ## create runtime option list
    if [[ -f src/site/asciidoc/elements/option-run-list.adoc ]]; then
        rm src/site/asciidoc/elements/option-run-list.adoc
    fi
    printf "== List of runtime options\n" > src/site/asciidoc/elements/option-run-list.adoc
    ${DMAP_TASK_EXEC["describe-option"]} --run --print-mode adoc >> src/site/asciidoc/elements/option-run-list.adoc


    ## create command list
    if [[ -f src/site/asciidoc/elements/command-list.adoc ]]; then
        rm src/site/asciidoc/elements/command-list.adoc
    fi
    printf "== List of shell commands\n" > src/site/asciidoc/elements/command-list.adoc
    ${DMAP_TASK_EXEC["describe-command"]} --all --print-mode adoc >> src/site/asciidoc/elements/command-list.adoc


    ## create parameter list
    if [[ -f src/site/asciidoc/elements/parameter-list.adoc ]]; then
        rm src/site/asciidoc/elements/parameter-list.adoc
    fi
    printf "== List of parameters\n" > src/site/asciidoc/elements/parameter-list.adoc
    ${DMAP_TASK_EXEC["describe-parameter"]} --all --print-mode adoc >> src/site/asciidoc/elements/parameter-list.adoc


    ## create dependency list
    if [[ -f src/site/asciidoc/elements/dependency-list.adoc ]]; then
        rm src/site/asciidoc/elements/dependency-list.adoc
    fi
    printf "== List of dependencies\n" > src/site/asciidoc/elements/dependency-list.adoc
    ${DMAP_TASK_EXEC["describe-dependency"]} --all --print-mode adoc >> src/site/asciidoc/elements/dependency-list.adoc


    ## create task list
    if [[ -f src/site/asciidoc/elements/task-list.adoc ]]; then
        rm src/site/asciidoc/elements/task-list.adoc
    fi
    printf "== List of tasks\n" > src/site/asciidoc/elements/task-list.adoc
    ${DMAP_TASK_EXEC["describe-task"]} --all --print-mode adoc >> src/site/asciidoc/elements/task-list.adoc


    ## create exit status list
    if [[ -f src/site/asciidoc/elements/exit-status-list.adoc ]]; then
        rm src/site/asciidoc/elements/exit-status-list.adoc
    fi
    printf "== List of exit status\n" > src/site/asciidoc/elements/exit-status-list.adoc
    ${DMAP_TASK_EXEC["describe-exitstatus"]} --all --print-mode adoc >> src/site/asciidoc/elements/exit-status-list.adoc
}