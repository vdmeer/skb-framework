##
## The SKB Framework application
##
## @author     Sven van der Meer <vdmeer.sven@mykolab.com>
## @version    0.0.6
## @since      0.0.1
##


set -o errexit -o pipefail -o noclobber -o nounset
shopt -s globstar

## Exitcode 2
if [[ ! $(command -v realpath) ]]; then printf "  skb-framework: \e[97mcommand\e[0m \e[1m\e[91merror\e[0m in phase \e[3m\e[4minit\e[0m: did not find did not find command 'realpath'\n\n"; exit 2; fi

SF_HOME=$(printf "$(realpath -L -P ${0})\n")
SF_HOME=${SF_HOME%/*}
SF_HOME=${SF_HOME%/*}
## Exitcode 3
if [[ ! -d "${SF_HOME}" ]]; then printf "  skb-framework: \e[97mdirectory\e[0m \e[1m\e[91merror\e[0m in phase \e[3m\e[4minit\e[0m: \$SF_HOME as '${SF_HOME}' is not a directory\n\n"; exit 3; fi
declare -r -x SF_HOME

source ${SF_HOME}/lib/start.sh
exit 0
